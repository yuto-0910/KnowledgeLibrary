// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model reviews {
  id        String    @id
  title     String　
  author    String　
  price     Int　
  publisher String　
  published String　
  image     String　
  read      DateTime  @default(now())
  memo      String
}
